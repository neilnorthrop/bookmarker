<h1>Bookmarks</h1>

<p>
  <%= link_to 'New Bookmark', new_bookmark_path %>
</p>

<table class="table table-striped">
  <tbody>
    <% @bookmarks.reverse.each do |bookmark| %>
      <tr>
        <th>
          <p>
            <%= link_to truncate(bookmark.title, :length => 50), bookmark.url, target: "_blank" %>
          </p>
        </th>
        <td>
          <p>
            Created <%= time_ago_in_words(bookmark.created_at) %> ago |
            <%= link_to 'Show', bookmark %> |
            <%= link_to 'Edit', edit_bookmark_path(bookmark) %> |
            <%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %>
          </p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
